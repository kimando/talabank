<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/TalaBank?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="com/tala/enterprise/talabank/model/db/Transaction.hbm.xml"/>
    <mapping resource="com/tala/enterprise/talabank/model/db/AccountType.hbm.xml"/>
    <mapping resource="com/tala/enterprise/talabank/model/db/TransactionType.hbm.xml"/>
    <mapping resource="com/tala/enterprise/talabank/model/db/Branch.hbm.xml"/>
    <mapping resource="com/tala/enterprise/talabank/model/db/Account.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
